{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Primary key"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "startedAt": {
      "type": "string",
      "format": "date-time"
    },
    "endedAt": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": [
        "AWAITING_START",
        "STARTED",
        "ENDED"
      ],
      "description": "Status of the session"
    },
    "chaperone": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "Chaperone(s) serving the session"
    },
    "requesterId": {
      "type": "string",
      "format": "uuid",
      "description": "Requester for session"
    },
    "requestId": {
      "type": "string",
      "format": "uuid",
      "description": "Request ID for the session"
    }
  },
  "required": [
    "id",
    "createdAt",
    "startedAt",
    "endedAt",
    "status",
    "chaperone",
    "requesterId",
    "requestId"
  ],
  "additionalProperties": false,
  "description": "Historical chaperone sessions. Row created as soon as a session has been started",
  "definitions": {}
}