{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@": ["./app"]
    }
  },
  "types": ["jest", "styled-components-react-native"],
  "exclude": ["node_modules"],
  "include": ["App.js", "app", "test", "storybook", "firebase.ts", "typedefs"]
}
